<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView gravity文字对齐方式"
        android:textSize="24sp"
        android:id="@+id/gravity_test"/>

    <Button
        android:id="@+id/LinearLayout_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LinearLayout 对齐方式"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/LinearLayout_test2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LinearLayout Layout_weigth比例布局"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/relative_layout_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RelativeLayout 相对布局"
        android:textSize="24sp"/>
</LinearLayout>
