<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/relative2_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="居中"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/relative2_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/relative2_btn1"
        android:layout_above="@id/relative2_btn1"
        android:text="左上"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/relative2_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/relative2_btn1"
        android:layout_toRightOf="@id/relative2_btn1"
        android:text="右上"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/relative2_btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative2_btn1"
        android:layout_toLeftOf="@id/relative2_btn1"
        android:text="左下"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/relative2_btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative2_btn1"
        android:layout_toRightOf="@id/relative2_btn1"
        android:text="右下"
        android:textSize="24sp"/>

</RelativeLayout>
