<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is TextView"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="#00ff00"
        android:id="@+id/text_view"/>

    <Button
        android:id="@+id/views_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button0"
        android:textAllCaps="false"/>

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type Something here"
        android:maxLines="1"/>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_32x32"/>

    <Button
        android:id="@+id/views_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Process Bar Test"/>

    <ProgressBar
        android:id="@+id/progressbar_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/views_btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Process Bar Test2"/>

    <ProgressBar
        android:id="@+id/progressbar_test2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"/>

    <Button
        android:id="@+id/views_btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AlertDialog Test"/>

    <Button
        android:id="@+id/views_btn5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ProgressDialog Test"/>
</LinearLayout>
