<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="BOOK操作"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/create_database_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新建数据表BOOK"/>

    <Button
        android:id="@+id/add_data_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加数据"/>


    <Button
        android:id="@+id/delete_data_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除数据"/>

    <Button
        android:id="@+id/change_data_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改数据"/>

    <Button
        android:id="@+id/search_data_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询数据"/>

    <TextView
        android:text="Category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/create_database_provider2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新建数据表BOOK"/>

    <Button
        android:id="@+id/add_data_provider2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加数据"/>


    <Button
        android:id="@+id/delete_data_provider2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除数据"/>

    <Button
        android:id="@+id/change_data_provider2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改数据"/>

    <Button
        android:id="@+id/search_data_provider2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询数据"/>
</LinearLayout>
