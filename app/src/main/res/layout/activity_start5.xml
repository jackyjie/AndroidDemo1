    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/broadcast_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广播"/>


    <Button
        android:id="@+id/broadcast_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送自定义标准广播"/>

    <Button
        android:id="@+id/broadcast_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="强制下线功能"/>
</LinearLayout>
